# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,css,json}]
indent_style = space
indent_size = 4

[*.{js,html}]
indent_style = space
indent_size = 2
